{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "KeyCloak": {
      "Authority": "http://localhost:8080/realms/VollMed",
      "Audience": "vollmed-api",
      "RequireHttpsMetadata": false,
      "ValidateAudience": true,
      "ValidateIssuer": true,
      "ValidateLifetime": true
    }
  },
  "ReverseProxy": {
    "Routes": {
      "consultas-route": {
        "ClusterId": "consultas-cluster",
        "Match": {
          "Path": "/api/consultas/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "receitas-route": {
        "ClusterId": "consultas-cluster",
        "Match": {
          "Path": "/api/receitas"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "medicos-route": {
        "ClusterId": "medicos-cluster",
        "Match": {
          "Path": "/api/medicos/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "pacientes-route": {
        "ClusterId": "pacientes-cluster",
        "Match": {
          "Path": "/api/pacientes/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated"
      }
    },
    "Clusters": {
      "consultas-cluster": {
        "Destinations": {
          "consultas-service": {
            "Address": "http://vollmed-consultas"
          }
        }
      },
      "medicos-cluster": {
        "Destinations": {
          "medicos-service": {
            "Address": "http://vollmed-medicos"
          }
        }
      },
      "pacientes-cluster": {
        "Destinations": {
          "pacientes-service": {
            "Address": "http://vollmed-pacientes"
          }
        }
      }
    }
  }
}
