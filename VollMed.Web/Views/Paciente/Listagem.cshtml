@using VollMed.Web.Dtos;
@model PaginatedList<VollMed.Web.Dtos.PacienteDto>

    <main class="container">
        <section class="card">
            <h2 class="title">Listagem de pacientes</h2>

            <div class="table-controls">
                <a href="@Url.Action("Formulario", "Pacientes" )" class="btn btn-tertiary">
                    <img src="~/assets/plus.png" alt="Ícone de adicionar" class="btn-icon">
                    Novo Paciente
                </a>
            </div>

            <table class="tabela">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var paciente in Model.Items)
                    {
                    <tr>
                        <td>@paciente.Nome</td>
                        <td>@paciente.Cpf</td>
                        <td>@paciente.Email</td>
                        <td>@paciente.Telefone</td>
                        <td>
                            <a href="@Url.Action("Formulario", "Pacientes" , new { id=paciente.Id })" class="btn btn-edit" title="Editar">
                                <img src="~/assets/edit.svg" alt="Editar">
                            </a>

                            <a href="#deleteModal" class="btn btn-delete" data-toggle="modal" data-id="@paciente.Id" data-url="/pacientes" title="Excluir">
                                <img src="~/assets/delete.svg" alt="Excluir">
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

            @await Html.PartialAsync("_paginacao", Model)
        </section>
    </main>

    <!-- Modal de Exclusão -->
    @await Html.PartialAsync("_modal_excluir")
